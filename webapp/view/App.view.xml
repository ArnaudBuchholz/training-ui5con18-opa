<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:form="sap.ui.layout.form"
	controllerName="sap.ui.demo.todo.controller.App"
	displayBlock="true"
>
	<Shell>
		<App>
			<Page title="{i18n>page.title}" backgroundDesign="Solid">
				<subHeader>
					<Toolbar>
						<SearchField id="searchTodoItemsInput" liveChange="onSearch" width="100%" />
					</Toolbar>
				</subHeader>
				<content>
					<Input class="todoInput" id="addTodoItemInput" placeholder="{i18n>addTodoInput.placeholder}" change="addTodo" />
					<List id="todoList"
						items="{/TodoItemSet}"
						mode="MultiSelect"
						growing="true"
						growingScrollToLoad="true"
						showNoData="true"
						showSeparators="None"
						rememberSelections="false"
						noDataText="{i18n>list.nodata}"
						itemPress="onItemPress"
						selectionChange="onSelectionChange">
						<ObjectListItem
							class="todoListItem"
							selected="{Completed}"
							busyIndicatorDelay="0"
							icon="{path: '', formatter: '.getIcon'}"
							intro="{path: '', formatter: '.getIntro'}"
							title="{Title}"
							type="Navigation"
						/>
					</List>
					<Dialog id="todoItem"
						title="{Title}"
						icon="{path: '', formatter: '.getIcon'}"
					>
						<form:SimpleForm
							layout="ResponsiveGridLayout"
							labelSpanXL="3"
							labelSpanL="3"
							labelSpanM="3"
							labelSpanS="12"
							adjustLabelSpan="false"
							emptySpanXL="4"
							emptySpanL="4"
							emptySpanM="4"
							emptySpanS="0"
							columnsXL="1"
							columnsL="1"
							columnsM="1"
							singleContainerFullSize="false">
							<Label text="{i18n>form.Title}" />
							<Input type="text" value="{Title}" visible="{= !${Completed} }" />
							<Label text="{i18n>form.DueDate}" />
							<DateTimePicker dateValue="{DueDate}" editable="{= !${Completed} }" />
							<Label text="{i18n>form.CompletionDate}" visible="{Completed}" />
							<DateTimePicker dateValue="{CompletionDate}" editable="false" visible="{Completed}" />
						</form:SimpleForm>
						<beginButton>
							<Button id="btnOK" press="onFormOK" text="{i18n>form.OK}" type="Accept" visible="{= !${Completed} }" />
						</beginButton>
						<endButton>
							<Button id="btnCancel" press="onFormCancel" text="{i18n>form.Cancel}" />
						</endButton>
					</Dialog>
				</content>
				<footer>
					<OverflowToolbar>
						<ToolbarSpacer />
						<SegmentedButton id="filters" selectedKey="all" select="onFilter" class="sapMSegmentedButtonNoAutoWidth" />
						<ToolbarSpacer />
						<Button id="clearCompleted" enabled="{/AppConfigurationSet('Todo')/EnableClear}" icon="sap-icon://delete" text="{i18n>button.clearCompleted}" press="clearCompleted" />
					</OverflowToolbar>
				</footer>
			</Page>
		</App>
	</Shell>
</mvc:View>
