<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="sap.ui.demo.todo.controller.App" displayBlock="true">
	<Shell>
		<App>
			<Page title="{i18n>page.title}" backgroundDesign="Solid">
				<subHeader>
					<Toolbar>
						<SearchField
							id="searchTodoItemsInput"
							liveChange="onSearch"
							width="100%" />
					</Toolbar>
				</subHeader>
				<content>
					<Input class="todoInput" id="addTodoItemInput" placeholder="{i18n>INPUT_PLACEHOLDER}" change="addTodo" />
					<List id="todoList"
						items="{/TodoItemSet}"
						mode="MultiSelect"
						growing="true"
						growingScrollToLoad="true"
						showNoData="true"
						showSeparators="None"
						rememberSelections="false"
						itemPress="onItemPress"
						selectionChange="onSelectionChange">
						<ObjectListItem
							class="todoListItem"
							selected="{Completed}"
							busyIndicatorDelay="0"
							icon="{path: '', formatter: '.getIcon'}"
							intro="{path: '', formatter: '.getIntro'}"
							title="{Title}"
							type="Navigation"
						/>
					</List>
				</content>
				<footer>
					<OverflowToolbar>
						<ToolbarSpacer />
						<SegmentedButton id="filters" selectedKey="all" select="onFilter" class="sapMSegmentedButtonNoAutoWidth" />
						<ToolbarSpacer />
						<Button id="clearCompleted" enabled="{/AppConfigurationSet('Todo')/EnableClear}" icon="sap-icon://delete" text="{i18n>button.clearCompleted}" press="clearCompleted" />
					</OverflowToolbar>
				</footer>
			</Page>
		</App>
	</Shell>
</mvc:View>
