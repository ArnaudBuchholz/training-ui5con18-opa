<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="sap.ui.demo.todo.controller.App" displayBlock="true">
	<Shell>
		<App>
			<Page title="{i18n>page.title}" backgroundDesign="Solid">
				<subHeader>
					<Toolbar>
						<SearchField
							id="searchTodoItemsInput"
							liveChange="onSearch"
							width="100%" />
					</Toolbar>
				</subHeader>
				<content>
					<Input class="todoInput" id="addTodoItemInput" placeholder="{i18n>INPUT_PLACEHOLDER}" change="addTodo" />
					<List id="todoList"
						items="{/TodoItemSet}"
						mode="MultiSelect"
						growing="true"
						growingScrollToLoad="true"
						showNoData="true"
						showSeparators="None"
						rememberSelections="false">
						<infoToolbar>
							<Toolbar>
								<Label id="listTitle" text="{labels>/listTitle}"/>
							</Toolbar>
						</infoToolbar>
						<CustomListItem class="todoListItem" selected="{= !!${CompletionDate} }">
							<HBox>
								<Input enabled="{= !${CompletionDate} }" value="{Title}">
									<layoutData>
										<FlexItemData growFactor="14" />
									</layoutData>
								</Input>
								<DatePicker enabled="{= !${CompletionDate} }" value="{DueDate}">
									<layoutData>
										<FlexItemData growFactor="1" />
									</layoutData>
								</DatePicker>
							</HBox>
						</CustomListItem>
					</List>
				</content>
				<footer>
					<Bar>
						<contentMiddle>
							<SegmentedButton selectedKey="all" select="onFilter" class="sapMSegmentedButtonNoAutoWidth">
								<items>
									<SegmentedButtonItem id="filterButton-all" text="{labels>/filterAll}" key="all" />
									<SegmentedButtonItem id="filterButton-active" text="{labels>/filterActive}" key="active" />
									<SegmentedButtonItem id="filterButton-late" text="{labels>/filterLate}" key="late" />
									<SegmentedButtonItem id="filterButton-completed" text="{labels>/filterCompleted}" key="completed" />
								</items>
							</SegmentedButton>
						</contentMiddle>
						<contentRight>
							<Button id="clearCompleted" enabled="{/AppConfigurationSet('Todo')/EnableClear}" icon="sap-icon://delete" text="{i18n>button.clearCompleted}" press="clearCompleted" />
						</contentRight>
					</Bar>
				</footer>
			</Page>
		</App>
	</Shell>
</mvc:View>
